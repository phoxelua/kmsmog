<span class="picture">
	<%= f.file_field :file, accept: 'application/pdf, image/jpeg,image/gif,image/png' %>
</span>
<script type="text/javascript">
  $('#customer_pdf_forms_attributes_0_file').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>