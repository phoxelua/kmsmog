<% provide(:title, 'Sign up') %>
<h1>New Customer</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@customer) do |customer| %>

      <%= render 'shared/error_messages', object: customer.object %>

      <%= customer.label :name %>
      <%= customer.text_field :name, :value => "ey", class: 'form-control' %>

      <%= customer.label :phone %>
      <%= customer.text_field :phone, :value => "555-555-5555", class: 'form-control' %>

      <%= customer.label :license_plate %>
      <%= customer.text_field :license_plate, :value => "ey", class: 'form-control' %>

      <%= customer.fields_for :pdf_forms do |pdf_form_form| %>
        <% p params %>

        <%= pdf_form_form.label :"form[:email]", "Email"%>
        <%= pdf_form_form.text_field :"form[:email]", :value => "ey" %>      
      <% end %>


      <%= customer.submit "Create a new customer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>