<div class="row">
  <div class="col-md-3">
    <%= f.label :"formy[year]", "Year"%>
    <%= f.text_field :"formy[year]", :value => nil, class: 'form-control'%>   
  </div>
  <div class="col-md-3">
    <%= f.label :"formy[make]", "Make" %><br />
    <div class="make-dropdown">
      <%= f.collection_select :"formy[make]", Make.order(:name), :id, :name, {:selected => "whatever_value", include_blank: true}, class: 'combobox form-control' %> 
    </div>
  </div>
  <div class="col-md-2">
    <%= f.label :"formy[model]", "Model" %><br />
    <div class="model-dropdown">
      <%= f.grouped_collection_select :"formy[model]", Make.order(:name), :models, :name, :id, :name, {:selected => "whatever_value", include_blank: true}, class: 'form-control' %>    
    </div>
  </div>
  <div class="col-md-2">
    <%= f.label :"formy[trim]", "Trim/Note"%>
    <%= f.text_field :"formy[trim]", :value => nil, class: 'form-control'%>
  </div>
  <div class="col-md-2">
    <%= f.label :"formy[engine]", "Engine"%>
    <%= f.text_field :"formy[engine]", :value => nil, class: 'form-control'%>
  </div>            
</div>