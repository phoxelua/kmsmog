<%= form_for(@customer) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  	<div class="col-md-4">
  	  	<div class="field">
    		<%= f.text_field :name, placeholder: "John Smith" %>
	    </div>
    </div>
  	<div class="col-md-4">
  		<div class="field">
    		<%= f.text_field :phone, placeholder: "555-123-4567" %>
    	</div>    	
    </div>
    <div class="col-md-4">
  		<div class="field">
    		<%= f.text_field :license_plate, placeholder: "ABC1234" %>
	  	</div>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
  		<div class="field">
  			<%= f.submit "Create", class: "btn btn-primary" %>
	  	</div>
    </div>    
<% end %>