<%= form_for([@user, @customer], :url => user_customers_path(@user)) do |customer| %>
    <%= render 'shared/error_messages', object: customer.object %>
    	<div class="col-md-4">
    	  	<div class="field">
      		<%= customer.text_field :name, placeholder: "John Smith" %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= customer.text_field :phone, placeholder: "555-123-4567" %>
        </div>      
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= customer.text_field :license_plate, placeholder: "ABC1234" %>
        </div>
      </div>
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <div class="field">
          <%= customer.submit "Search", class: "btn btn-primary" %>
          <%= link_to "New customer? Create one now!", new_user_customer_path(@user), :method => :get %>
        </div>
      </div>
<% end %>
