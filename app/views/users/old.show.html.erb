<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
        <span><em><%= @user.organization %></em></span>
        <span><%= @user.email %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.customers.any? %>
      <h3>Customers (<%= @user.customers.count %>)</h3>
      <ol class="customers">
        <%= render @customers %>
      </ol>
      <%= will_paginate @customers %>
    <% end %>
  </div>  
</div>